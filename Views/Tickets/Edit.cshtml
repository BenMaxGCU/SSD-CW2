            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TicketState, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TicketState, 
                                                                    new SelectList(Enum.GetValues(typeof(Ticket.ticketState))), 
                                                                    "Select State")
                @Html.ValidationMessageFor(model => model.TicketState, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
    </div>
</section>

