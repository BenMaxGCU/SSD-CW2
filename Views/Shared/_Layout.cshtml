<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="/Content/index.css" rel="stylesheet" />
    <link href="/Content/site.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <header id="header">
        <div class="container">
            <div id="logo" class="pull-left">
                <h1><a style="text-decoration: none;" href="@Url.Action("Index", "Home")">SSTS</a></h1>
            </div>

            <nav id="nav-menu-container">
                <ul class="nav-menu" id="nav">
                    <li><a style="text-decoration: none;" href="@Url.Action("Index", "Home")">Tickets</a></li>
                    <li><a style="text-decoration: none;" href="@Url.Action("About", "Home")">Login</a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </nav>
        </div>
    </header>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>Ben Maxwell - SSD Coursework 2</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

